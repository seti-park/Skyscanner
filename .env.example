# Amadeus API 설정

# https://developers.amadeus.com 에서 무료 가입 후 발급

# Self-Service 워크스페이스에서 API Key와 Secret 확인

AMADEUS_API_KEY=your-amadeus-api-key-here
AMADEUS_API_SECRET=your-amadeus-api-secret-here

# Telegram Bot 설정

# @BotFather를 통해 봇 생성 후 토큰 받기

TELEGRAM_BOT_TOKEN=your-telegram-bot-token-here

# Telegram Chat ID

# 봇과 대화 시작 후 https://api.telegram.org/bot<TOKEN>/getUpdates 에서 확인

TELEGRAM_CHAT_ID=your-chat-id-here

# 선택 설정 (기본값 사용 가능)

# 출발/도착 공항 (IATA 코드)

ORIGIN=ICN
DESTINATION=NRT

# 날짜 설정

DEPARTURE_DATE=2025-10-03
RETURN_DATE=2025-10-08

# 인원 및 가격

ADULTS=2
MAX_PRICE=1500000

# 직항만 (true/false)

DIRECT_ONLY=true
